set history=700

if has('mouse')
    set mouse=a
endif

" Ignore case when searching
set ignorecase
set smartcase

" Highlight search results
set hlsearch

set incsearch

" Magix for regex
set magic

" Show matching brackets
set showmatch

" Extra margin on the left
set foldcolumn=1


" Syntax highlighting
syntax enable

" Turn off backups
set nobackup
set nowb
set noswapfile

" Spaces instead of tabs
set expandtab
set smarttab

set shiftwidth=4
set tabstop=4

" Auto indent
set ai
" Smart indent
set si

set number
